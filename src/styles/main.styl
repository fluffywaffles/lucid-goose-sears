html, body
  margin 0
  width 100%
  height 100%

body
  font-family 'Open Sans', 'Helvetica', 'Arial', sans-serif

*
  box-sizing border-box

.top
  padding 10px
  border-bottom 1px solid gray
  height 55px

h1, h2, h3
  margin 0
  margin-right 10px
  display inline-block

  & + span
    color rgba(0,0,0,0.5)

.top
  position relative

button
  appearance none
  border none
  background none
  font-family inherit
  border 1px solid gray
  border-radius 2px
  cursor pointer

button.logout
  position absolute
  top 10px
  right 10px

#upload
  display none

.featured
  width 100%
  height 240px
  overflow-x auto
  overflow-y hidden
  white-space nowrap
  background white
  padding 20px

  box-shadow 0 2px 1px rgba(0,0,0,0.1)

  &.sticky
    position fixed
    top 0
    z-index 1
    & + .unfeatured
      padding-top 250px

  .thumbs
    padding 5px 0

  .thumb
    display table-cell
    vertical-align middle

.show-dropzone
  position relative

.show-dropzone:after
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  border 2px dashed gray
  color gray
  box-sizing border-box
  content 'Drop to move image'

.unfeatured
  width 100%
  white-space normal
  padding 20px

.thumb
  height 160px
  display inline-block
  position relative

  img
    display block
    max-height 160px
    padding 0 10px
    cursor pointer
    margin 0 auto
