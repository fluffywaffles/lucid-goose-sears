html, body
  margin 0
  width 100%
  height 100%

body
  font-family 'Open Sans', 'Helvetica', 'Arial', sans-serif

*
  box-sizing border-box

.top
  padding 10px
  border-bottom 1px solid gray
  height 55px

.block
  display table-cell
  margin 0
  width 10%

h1, h2, h3
  margin 0

button.logout
  float right
  appearance none
  border none
  background none
  font-family inherit

.featured
  position relative
  width 100%
  height 260px
  overflow-x auto
  overflow-y hidden
  white-space nowrap
  background white
  padding 20px

  box-shadow 0 2px 1px rgba(0,0,0,0.1)

  &.sticky
    position fixed
    top 0
    & + .unfeatured
      padding-top 280px

  .thumb
    display table-cell
    vertical-align middle

    &:first-child img
      padding-left 0
    &:last-child img
      padding-right 20px

  h3
    width 100%

.unfeatured
  width 100%
  white-space normal
  padding 20px

.thumb
  height 200px
  display inline-block

  img
    display block
    max-height 200px
    padding 0 10px
