doctype html

html
  head
    title Newport Academy Admin Interface

    meta(name='viewport', value='width=device-width, initial-scale=1')
  
    link(rel='stylesheet', type='text/css', href='main.css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans', rel='stylesheet', type='text/css')
    link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', rel='stylesheet', type='text/css')
    
    mixin newsletter-item (name, date, filename)
      li.newsletter-item&attributes(attributes)
        i.fa.fa-file-pdf-o
        span.filename(title=filename)= name
        span.date= date
        i.fa.fa-download.download-btn
        i.fa.fa-trash.delete-btn
    
    mixin thumb (src, title, caption)
      .thumb&attributes(attributes)
        h3.title= title
        img(src=src, title=caption)
        p.caption= caption

  body
    .top
      h2 Newport Academy
      span.info-text Upload new photos by
      button.upload Clicking Here
      input#upload.hidden(type='file')
      button.newsletter-btn Newsletter
      span.info-text.newsletter-btn-help Click here for

    .main.mode__photos
      .newsletter
        ul.newsletter-list
          p Click above to upload a new newsletter. Hover over a newsletter's
            | title in order to see its filename. Press the
            i.fa.fa-trash
            | button to delete a newsletter. Press the
            i.fa.fa-download
            | button to download a newsletter.
          +newsletter-item('blah blah', 'blah')(class='hide template')
          +newsletter-item('Example 1', '12 / 12 / 15', 'Newsletter EXAMPLE 1.pdf')
          +newsletter-item('Example 2', '12 / 19 / 15', 'Newsletter EXAMPLE 2.pdf')
        
      .photos
        +thumb('//placehold.it/350x150?t', 'blah', 'blah')(class='hide template')
        .featured
          .title
            h3 Featured Images
            span Click or drag to interchange with unfeatured images, right click to delete
          .thumbs
            +thumb('//placehold.it/350x150?0', 'Photo 1', 'This is a photo')
            +thumb('//placehold.it/350x150?1', 'Photo 2', 'This is a photo')
        .unfeatured
          +thumb('//placehold.it/350x150?8', 'Photo 3', 'This is a photo too')
          +thumb('//placehold.it/350x150?9', 'Photo 4', 'And so is this')

    script(type='text/javascript', src='main.js')
